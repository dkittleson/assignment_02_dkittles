<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Prefix</th>
      <th>Num</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.prefix %></td>
        <td><%= course.num %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Show', course, class:"btn btn-secondary"  %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class:"btn btn-secondary"  %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class:"btn btn-secondary"  %>
