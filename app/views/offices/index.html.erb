<p id="notice"><%= notice %></p>

<h1>Offices</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
  <tr>
    <th>Building Name</th>
    <th>Floor Number</th>
    <th>Room Number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @offices.each do |office| %>
    <tr>
      <td><%= office.building %></td>
      <td><%= office.floor %></td>
      <td><%= office.room %></td>
      <td><%= link_to 'Show', office, class:"btn btn-secondary" %></td>
      <td><%= link_to 'Edit', edit_office_path(office), class:"btn btn-secondary" %></td>
      <td><%= link_to 'Delete', office, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Office', new_office_path, class:"btn btn-secondary" %>
