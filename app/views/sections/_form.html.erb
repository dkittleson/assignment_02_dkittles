<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :year %>
    <%= form.text_field :year, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :semester %>
    <%= form.text_field :semester, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :course_id %>
    <%= form.collection_select :course_id, Course.all, :id, :prefix_num, class:"form-control" %>
  </div>
<br>
  <div class="actions">
    <%= form.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
